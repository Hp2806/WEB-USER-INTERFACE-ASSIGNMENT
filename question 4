  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
      (function () {
      const form = document.getElementById('loginForm');
      const emailInput = document.getElementById('email');
      const passInput = document.getElementById('password');
      const emailError = document.getElementById('emailError');
      const passError = document.getElementById('passwordError');
      const statusNode = document.getElementById('loginStatus');
      document.getElementById('demoCreds').addEventListener('click', () => {
        emailInput.value = 'student@example.com';
        passInput.value = 'password123';
        emailError.textContent = '';
        passError.textContent = '';
        statusNode.textContent = 'Demo credentials filled.';
      });
      form.addEventListener('submit', function (e) {
        e.preventDefault(); 
        emailError.textContent = '';
        passError.textContent = '';
        statusNode.textContent = '';
        const email = emailInput.value.trim();
        const password = passInput.value.trim();
        let ok = true;
        if (!email) {
          emailError.textContent = 'Email is required.';
          ok = false;
        } else if (!/^\S+@\S+\.\S+$/.test(email)) {
          emailError.textContent = 'Please enter a valid email.';
          ok = false;
        }
        if (!password) {
          passError.textContent = 'Password is required.';
          ok = false;
        } else if (password.length < 6) {
          passError.textContent = 'Password must be at least 6 characters.';
          ok = false;
        }
        if (!ok) {
          statusNode.textContent = 'Please fix the errors above.';
          return;
        }
        statusNode.textContent = 'Signing in...';
        setTimeout(() => {
          if (email === 'student@example.com' && password === 'password123') {
            statusNode.textContent = 'Successfully signed in — redirecting to dashboard...';
            setTimeout(() => { window.location.hash = '#mydashboard'; }, 700);
          } else {
            statusNode.textContent = '';
            passError.textContent = 'Invalid credentials.';
          }
        }, 700);
      });
    })();
      $(function () {
      const $items = $('#featuredArea').children('.featured-card');
      let current = 0;
      const total = $items.length;
      function show(index) {
        $items.filter(':visible').fadeOut(300, function () {
          $items.addClass('d-none').eq(index).removeClass('d-none').hide().fadeIn(400);
        });
      }
      const interval = 4000;
      let rotator = setInterval(() => {
        current = (current + 1) % total;
        show(current);
      }, interval);
      $('#featuredArea').hover(() => clearInterval(rotator), () => {
        rotator = setInterval(() => {
          current = (current + 1) % total;
          show(current);
        }, interval);
      });
      show(0);
    });
  </script>
